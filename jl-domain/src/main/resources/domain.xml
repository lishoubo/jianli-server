<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:component-scan base-package="com.jl.platform.domain"/>

    <bean id="couchDbClient" class="com.jl.platform.domain.couchdb.frame.CouchDbClient" destroy-method="shutdown">
        <constructor-arg name="configFileName" value="couchdb.properties"/>
    </bean>

    <bean id="mongoClient" class="com.mongodb.MongoClient"/>
    <bean id="mongoDB" class="com.jl.platform.domain.mongodb.MongoDB">
        <property name="dbName" value="jianli"/>
    </bean>


</beans>


